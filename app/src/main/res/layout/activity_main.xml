<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgView1"
        android:layout_width="114dp"
        android:layout_height="52dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/zoo" />

    <ImageView
        android:id="@+id/imgView2"
        android:layout_width="134dp"
        android:layout_height="74dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:onClick="playsound"
        app:layout_constraintEnd_toStartOf="@+id/imgView3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgView1"
        app:srcCompat="@drawable/horse" />

    <ImageView
        android:id="@+id/imgView3"
        android:layout_width="133dp"
        android:layout_height="75dp"
        android:layout_marginBottom="152dp"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="8dp"
        android:onClick="playsound1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgView4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imgView2"
        app:layout_constraintTop_toBottomOf="@+id/imgView1"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/elephant" />

    <ImageView
        android:id="@+id/imgView4"
        android:layout_width="132dp"
        android:layout_height="75dp"
        android:layout_marginBottom="152dp"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        android:onClick="playsound2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imgView3"
        app:layout_constraintTop_toBottomOf="@+id/imgView1"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/lion" />

    <ImageView
        android:id="@+id/imgView5"
        android:layout_width="134dp"
        android:layout_height="74dp"
        android:layout_marginLeft="104dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="32dp"
        android:onClick="googlemap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgView2"
        app:srcCompat="@drawable/go" />

    <ImageView
        android:id="@+id/imgView6"
        android:layout_width="133dp"
        android:layout_height="75dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="88dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="28dp"
        android:onClick="clickmobile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toEndOf="@+id/imgView5"
        app:layout_constraintTop_toBottomOf="@+id/imgView4"
        app:srcCompat="@drawable/call" />
</android.support.constraint.ConstraintLayout>